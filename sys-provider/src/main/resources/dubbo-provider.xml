	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="demo-provider" owner="programmer"
		organization="dubbox" />
	<dubbo:registry address="zookeeper://127.0.0.1:2181" />
	<!-- <dubbo:registry address="zookeeper://10.0.0.149:2181"/> -->
	<dubbo:annotation package="com.eaju" />
	<dubbo:protocol name="dubbo" serialization="kryo"
		optimizer="com.eaju.core.serialize.SerializationOptimizerImpl" />
	<dubbo:protocol name="rest" server="tomcat" port="8888"
		contextpath="services" accepts="500" threads="100"></dubbo:protocol>

